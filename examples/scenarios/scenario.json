{
  "name": "Scenario",
  "tests": [
    {
      "method": "POST",
      "url": "/api/v1/user/",
      "name": "Register_User",
      "body": "{\"email\":\"test_user@mail.ru\",\"password\": \"123qwe123\",\"name\": \"имя\"}",
      "headers": "{\"Content-Type\": \"application/json\"}",
      "validators": [
        {
          "allowed_response_statuses": [
            201,
            200
          ],
          "expected_response_body": "{\"email\":\"test_user@mail.ru\",\"password\": null,\"name\": \"имя\",\"id\": 3}",
          "timeout": 100,
          "points": 1
        }
      ]
    },
    {
      "method": "POST",
      "url": "/api/v1/auth/",
      "name": "Auth_User",
      "body": "{\"username\":\"test_user@mail.ru\",\"password\": \"123qwe123\"}",
      "headers": "{\"Content-Type\": \"application/json\"}",
      "validators": [
        {
          "allowed_response_statuses": [
            201,
            200
          ],
          "timeout": 100,
          "points": 1
        }
      ]
    },
    {
      "method": "GET",
      "url": "/api/v1/user/${Register_User:Response:id}$",
      "name": "Get_User",
      "body": "",
      "headers": "{\"Content-Type\": \"application/json\", \"Authorization\": \"Token ${Auth_User:Response:token}$\"}",
      "validators": [
        {
          "allowed_response_statuses": [
            201,
            200
          ],
          "expected_response_body": "{\"id\": ${Register_User:Response:id}$, \"name\": \"имя\", \"email\": \"test_user@mail.ru\"}",
          "timeout": 100,
          "points": 1
        }
      ]
    },
    {
      "method": "DELETE",
      "url": "/api/v1/user/${Register_User:Response:id}$",
      "name": "Remove_User",
      "body": "",
      "headers": "{\"Content-Type\": \"application/json\", \"Authorization\": \"Token ${Auth_User:Response:token}$\"}",
      "validators": [
        {
          "allowed_response_statuses": [
            204
          ],
          "timeout": 100,
          "points": 1
        }
      ]
    }
  ]
}